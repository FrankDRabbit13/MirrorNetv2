
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and update their own document.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Allow creation for any authenticated user (for signup).
      allow create: if request.auth != null;
    }

    // Allow any authenticated user to read from circles.
    match /circles/{circleId} {
      allow read: if request.auth != null;
      // Only the owner can update or delete a circle.
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
      // Any authenticated user can create a circle.
      allow create: if request.auth != null;
    }

    // Rules for ratings - allow if authenticated.
    match /ratings/{ratingId} {
        allow read, write: if request.auth != null;
    }
    match /attractionRatings/{ratingId} {
        allow read, write: if request.auth != null;
    }

    // Rules for invites, requests, and goals.
    match /invites/{inviteId} {
      allow read, write: if request.auth != null;
    }
    match /revealRequests/{requestId} {
      allow read, write: if request.auth != null;
    }
    match /familyGoals/{goalId} {
       allow read, write: if request.auth != null;
    }
    
    // Rules for feedback.
    match /feedback/{feedbackId} {
       allow read, write: if request.auth != null;
    }

    // Products collection for Stripe is public.
    match /products/{productId} {
      allow read: if true;
      match /prices/{priceId} {
        allow read: if true;
      }
    }
  }
}
