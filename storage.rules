
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to the default logo.
    match /MirrorNet logo.png {
      allow read: if true;
    }

    // Allow authenticated users to read and write to a folder matching their user ID.
    // This is used for profile photos.
    match /profile-photos/{userId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Fallback rule: deny all other access.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
